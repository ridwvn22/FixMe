<%= form_with(model: habit, url:habits_path,
method: :post) do |form| %>
        <div class="field">
          <%= form.label :name %>
          <%= form.text_field :name %>
        </div>
      
        <div class="field">
          <%= form.label :description %>
          <%= form.text_area :description %>
        </div>
      
        <div class="field">
          <%= form.label :duration %>
          <%= form.date_select :duration %>
        </div>
      
        <div class="field">
          <%= form.label :status %>
          <%= form.select :status, Habit.statuses.map { |k, v| [k.humanize, k] } %>
        </div>
      
        <div class="actions">
          <%= form.submit %>
        </div>
      <% end %>
      